

.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5rpx;
}
.header {
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: middle;
  margin: 10rpx 0 20rpx 10rpx;

}
.header > image {
  width: 50rpx;
  height: 50rpx;  
    vertical-align: middle;

}
.header > text {
  font-size: 24rpx;
    margin-left: 20px;
    font-size:26rpx;
    margin-bottom: 10px;
}
.post-image {
    width:100%;
    height:340rpx;
    margin-bottom: 15px;

}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}

.footer {
      font-size:13px;
    line-height: 16px;
    margin-left: 10px;
    flex-direction: row;
}

.footer > image {
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
    margin-left: 10rpx;
    vertical-align: middle;
}
.footer > text {
  vertical-align: middle;
}